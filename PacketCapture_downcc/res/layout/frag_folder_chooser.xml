        <EditText android:id="@id/fileName" android:layout_width="0.0px" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1.0" />
        <Button android:id="@id/save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="保存" />
    </LinearLayout>
</LinearLayout>